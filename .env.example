# Database
DATABASE_URL=postgresql+asyncpg://postgres:your_password@db:5432/vibe-search
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=vibe-search
DB_PORT=5433
BACKEND_PORT=8000

# CORS
ALLOWED_HOSTS=["*"]

# Environment
ENVIRONMENT=development
SECRET_KEY=your-super-secret-key-here
APP_NAME=Vibe Search API
VERSION=1.0.0

# Scraping Configuration
APIFY_TOKEN=your_apify_token_here
MIN_DELAY_BETWEEN_REQUESTS=2
MAX_POSTS_PER_REQUEST=100

# Instagram Apify Actor
APIFY_INSTAGRAM_ACTOR_ID=apify/instagram-scraper

# Pinterest Apify Actor
APIFY_PINTEREST_ACTOR_ID=epctex/pinterest-scraper

# PyTorch Configuration
KMP_DUPLICATE_LIB_OK=TRUE
OMP_NUM_THREADS=1
TORCH_HOME=./torch_cache

# Image Processing Configuration
USE_MOCK_IMAGE_SERVICE=false
IMAGE_PROCESSING_TIMEOUT=30
MAX_IMAGE_SIZE=2048

# Hugging Face
HUGGINGFACE_TOKEN=your_huggingface_token_here